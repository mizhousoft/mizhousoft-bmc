<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mizhousoft.bmc.role.mapper.RolePermissionMapper">
	
	<resultMap type="com.mizhousoft.bmc.role.domain.RolePermission" id="RolePermissionMap">
		<id property="id" column="id" />
		<result property="roleName" column="roleName" />
		<result property="permName" column="permName" />
	</resultMap>
	
	<resultMap type="com.mizhousoft.bmc.role.domain.Permission" id="PermissionMap">
		<id property="id" column="id" />
		<result property="srvId" column="srvId" />
		<result property="type" column="type" />
		<result property="name" column="name" />
		<result property="parentName" column="parentName" />
		<result property="displayNameCN" column="displayNameCN" />
		<result property="displayNameUS" column="displayNameUS" />
		<result property="authz" column="isAuthz" />
		<result property="descriptionCN" column="descriptionCN" />
		<result property="descriptionUS" column="descriptionUS" />
	</resultMap>
	
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert into bmc_role_permission (permName ,roleName)
		values(#{permName}, #{roleName})
	</insert>
	
	<delete id="deleteByRoleName">
		delete from bmc_role_permission where roleName = #{roleName}
	</delete>
	
	<select id="findByPermName" resultMap="RolePermissionMap">
		select id, permName ,roleName
		from bmc_role_permission 
		where permName = #{permName}
	</select>
	
	<select id="findByRoleName" resultMap="RolePermissionMap">
		select id, permName ,roleName
		from bmc_role_permission 
		where roleName = #{roleName}
	</select>
		
	<select id="findPermissionByRoleName" resultMap="PermissionMap">
		select p.id, p.srvId, p.type, p.name, p.parentName, p.displayNameCN, p.displayNameUS, p.isAuthz, p.descriptionCN, p.descriptionUS
		from bmc_permission p, bmc_role_permission rp
		where p.name = rp.permName and rp.roleName = #{roleName}
	</select>
	
</mapper>